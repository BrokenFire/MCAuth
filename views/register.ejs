<!DOCTYPE html>
<html>
<head>
    <title>Registration</title>
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">



</head>
<body>
<div class="container">
    <div class="row">
        <div class="col s12 m12 l12">
            <h2 class="center">Register</h2>
        </div>


    </div>
    <div class="row red-text">
        <% if (message !== "") { %>
            <h2 class="green-text center"><%= message%></h2>
        <% } %>
        <% if (Object.keys(errors).length !== 0) { %>

            <ul class="collection with-header">
                <li class="collection-header"><b>Oops, please correct the following</b></li>
                <% Object.values(errors).forEach(error => { %>
                    <li class="collection-item"><%= error %></li>
                <% }) %>
            </ul>
        <% } %>
    </div>

    <form method="post" action="/register" novalidate>
        <div class="form-field input-field ">
            <label for="username">User Name</label>
            <input class="input validate <%= errors.user_name ? 'invalid' : '' %>" id="username" name="user_name" type="text" autofocus>
        </div>
        <div class="form-field  input-field ">
            <label for="password">Password</label>
            <input class="input validate <%= errors.password ? 'invalid' : '' %>" id="password" name="password" type="password"/>
        </div>
        <div class="form-field input-field <%= errors.password ? 'form-field-invalid' : '' %>">
            <label for="checkPassword">Check Password</label>
            <input class="input" id="checkPassword" name="check_password" type="password"/>
        </div>
        <div class="form-actions center">
            <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>
